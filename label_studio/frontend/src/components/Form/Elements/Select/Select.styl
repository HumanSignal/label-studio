.select
  position relative

  &__list
    top 0
    left 0
    width 100%
    height 100%
    padding 0 16px
    margin 0
    border none
    border-radius 3px
    position absolute
    background-color transparent
    transition box-shadow 80ms ease
    font-size: inherit
    border-right 10px solid transparent

  &_ghost
    margin-left -10px
    border 1px solid transparent

    & ^[0]__list
      padding 0 5px

    &:hover
      border 1px solid $black_15
