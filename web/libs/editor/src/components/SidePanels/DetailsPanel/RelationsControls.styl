.relation-controls
  display flex
  align-items center

  .button
    height 24px
    font-size 14px
    font-weight 400
    padding 0px 2px !important
    justify-content flex-start

    &__icon
      width 24px
      height 24px
      flex none
      margin 0

    &:focus
      box-shadow none

    &:hover
      background rgba(65, 60, 74, 0.08)
      border-radius 4px

    &[disabled]
      background-color #fff
      color rgba(#000, 0.3)
